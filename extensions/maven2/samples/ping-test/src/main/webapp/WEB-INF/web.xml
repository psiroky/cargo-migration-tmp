<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Sample webapp for testing Cargo Maven2 plugin's deployable pinging capabilities</display-name>
  <servlet>
    <servlet-name>PingTestServlet</servlet-name>
    <servlet-class>org.codehaus.cargo.sample.maven2.ping_test.PingTestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PingTestServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>
